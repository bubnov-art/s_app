<div class="col-xs-12 col-sm-offset-4 col-md-offset-4 col-sm-4 col-lg-offset-4 col-lg-4">
  <h2 class='text-center'><%= t(".sign_up") %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, class: 'form-control', required: true %>
    </div>
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, class: 'form-control', required: true %>
    </div>
    <div class="field">
      <%= f.label :second_name %><br />
      <%= f.text_field :second_name, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-control', autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, class: 'form-control input-medium bfh-phone', data: { format: "+7 (ddd) ddd-dd-dd" } %>
    </div>
    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city, class: 'form-control', required: true %>
    </div>
    <div>
      <%= f.label :pass_file %><br />
      <%= f.file_field :pass_file, class: 'form-control', required: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit t(".sign_up"), class: 'btn btn-success' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  <br />
  <br />
